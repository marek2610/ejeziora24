<form action="">
    </fieldset>
        <div class="row">
            <div class="form-group col-sm-3">
                <label for="">
                {{ form_label(form.user) }}
                </label>          
                {% if edit is defined and edit == '1' %}
                    {{ form_widget(form.user, {'attr': {'class': 'form-control', 'disabled':'disabled'}}) }}
                {% else %}
                    {{ form_widget(form.user, {'attr': {'class': 'form-control'}}) }}
                {% endif %}

                <small>Rodzaj opłaty np.: Karta wędkarska tygodniowa</small>
            </div>
            <div class="form-group col-sm-3">
                <label for="">
                {{ form_label(form.jezioro) }}
                </label>
                {{ form_widget(form.jezioro, {'attr': {'class': 'form-control'}}) }}
                <small>Rodzaj opłaty np.: Karta wędkarska tygodniowa</small>
            </div>
            <div class="form-group col-sm-3">
                <label for="">
                {{ form_label(form.rodzaj) }}
                </label>
                {{ form_widget(form.rodzaj, {'attr': {'class': 'form-control'}}) }}
                <small>Rodzaj opłaty np.: Karta wędkarska tygodniowa</small>
            </div>
            <div class="form-group col-sm-3">
                <label for="">
                {{ form_label(form.cena) }}
                </label>
                {{ form_widget(form.cena, {'attr': {'class': 'form-control'}}) }}
                <small>Cena</small>
            </div>
        </div>
    {{ form_rest(form) }}
    </fieldset>
    <button class="btn btn-primary">{{ button_label|default('Edytuj') }}</button>
</form>
{{ form_end(form) }}
