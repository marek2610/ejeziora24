{% extends 'admin/admin_base.html.twig' %}

{% block title %}Wiadomości{% endblock %}

{% block page_title %}Wiadomości{% endblock %}

{% block body %}
<div class="table-responsive">
	<table class="table table-striped table-sm">
		<thead>
			<tr>
				<th>#</th>
				<th>Imię</th>
				<th>Nazwisko</th>
				<th>Telefon</th>
				<th>@</th>
				<th>Wiadomość</th>
				<th>Akcje</th>
			</tr>
		</thead>
		<tbody>
			{% for w in wiadomosci %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ w.imie }}</td>
					<td>{{ w.nazwisko }}</td>
					<td>{{ w.telefon }}</td>
					<td>{{ w.email }}</td>
					<td>{{ w.wiadomosc|striptags }}</td>
					<td>
						<a href="{{ path('admin.wiadomosci.show', {'id': w.id}) }}">show</a>
						<a href="{{ path('admin.wiadomosci.delete', {'id': w.id}) }}">delete</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="10">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
</div>

<nav class="navbar navbar-expand-sm">
	<ul class="navbar-nav mr-auto">
		<li class="nav-item">
			<a class="nav-link" href="{{ url('admin_admin') }}">Panel administracyjny</a>
		</li>
	</ul>
</nav>
{% endblock %}
