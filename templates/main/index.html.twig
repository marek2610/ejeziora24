{% extends 'base.html.twig' %}

{% block title %}www.e-jeziora24.pl{% endblock %}

{% block body %}

{% for message in app.flashes('success') %}
	<div class="alert alert-success">
		<strong>Gratulacje!!!</strong>
		{{ message }}
	</div>
{% endfor %}
{% for message in app.flashes('error') %}
	<div class="alert alert-danger">
		<strong>Uwaga!!!</strong>
		{{ message }}
	</div>
{% endfor %}


<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
	<img src="{{ asset('uploads/logo/logo_head.png') }}" width="17%"/>
	<h5 class="text-primary">Serwis poświęcony obwodom rybackim i sprzedaży zezwoleń wędkarskich</h5>
</div>


<div class="container text-center mt-4">
	<div class="row flex">

		{% for j in jeziora %}
		<div class="col-4 text-center mb-4">
			<div class="card card text-white bg-primary">
				<a href="{{ url('jeziora_show', {slug: j.slug}) }}" class="list-group-item list-group-item-action flex-column align-items-start active">
					<div class="text-center">
						<h3>{{ j.nazwa }}</h3>
					</div>
				</a>
				<div class="card-body p">					
					<h5>
						msc. {{ j.miejscowosc }} <br>
						</h5>
					{{ j.powierzchnia |number_format(2, ',', ' ') }}
					ha
					<br>
					{{ j.region }}
				</div>
				<img style="height: 200px; width: 100%; display: block;" src="{{ asset('uploads/jeziora/' ~ j.brochureFilename) }}" alt="{{ j.nazwa }}">
				<div class="card-body">
					<p class="card-text">{{ j.opis | striptags | u.truncate(35, '...', true ) }}</p>
				</div>
				<ul class="list-group list-group-flush">
					<li class="list-group-item text-muted">Data dodania: {{ j.utworzono | date ('d/m/Y') }}</li>
				</ul>
				<div class="card-body">
					
				</div>
			</div>
		</div>
			
