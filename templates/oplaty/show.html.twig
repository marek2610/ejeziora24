{% extends 'base.html.twig' %}

{% block title %}Opłaty{% endblock %}

{% block body %}
<div class="container">
	<div class="px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center text-primary">
		<h1 class="text-primary">Dane szczegółowe opłaty wędkarskiej</h1>
    </div>
</div>

<div class="container">
	<table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Jezioro</th>
                <td>{{ oplaty.jezioro }}</td>
            </tr>
            <tr>
                <th>Rodzaj</th>
                <td>{{ oplaty.rodzaj }}</td>
            </tr>
            <tr>
                <th>Cena</th>
                <td>{{ oplaty.cena }} PLN</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('oplaty_edit', {'id': oplaty.id}) }}">
            <button type="button" class="btn btn-primary">Edytuj</button>
        </a>
    </div>

    <hr>
    
    {{ include('oplaty/_delete_form.html.twig') }}

    <hr>

    <div >
        <a href="{{ path('oplaty_index') }}">
            <button type="button" class="btn btn-primary">Powrót</button>
        </a>
    </div>

    <div class="clearfix"></div>

